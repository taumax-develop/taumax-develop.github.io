---
import { Image } from 'astro:assets';
import ICON_TWITTER_CARD from '../assets/images/icon_twitter_card.png';
import ICON_TWITTER from '../assets/images/icon_twitter.png';
import ICON_TOGETTER from '../assets/images/icon_togetter.png';
import ICON_QIITA from '../assets/images/icon_qiita.png';
import ICON_SAGAMAX from '../assets/images/icon_sagamax.png';

export type index = {
  id: string;
  name: string;
};
let { indexList } = Astro.props;
---

<header class="pc">
  <h1 class="logo"><a href="https://taumax-github.github.io/"><Image src={ICON_TWITTER_CARD} alt="TOP"></a></h1>

  <!--PC用（801px以上端末）メニュー-->
  <nav id="menubar">
    <ul class="none">
      <li class="menuimg menu1"><a href="https://taumax-github.github.io/"><span>Home</span></a></li>
    </ul>
  </nav>
  <ul class="icon">
    <li><a href="https://twitter.com/taumax_" target="_blank"><Image src={ICON_TWITTER} alt="Twitter"></a></li>
    <li><a href="https://togetter.com/id/taumax_" target="_blank"><Image src={ICON_TOGETTER} alt="togetter"></a></li>
    <li><a href="https://qiita.com/taumax" target="_blank"><Image src={ICON_QIITA} alt="Qiita"></a></li>
  </ul>
  <nav class="indent_no">
    {indexList?.map((item: index) => {
      let ele = item.id? <li><a href={item.id}>{item.name}</a></li>:<br/><p>{item.name}</p>
      return ele
    })}
  </nav>
</header>
<!--/.pc-->

<!--小さな端末用（800px以下端末）で表示させるブロック-->
<header class="sh">
  <!--小さな端末用（800px以下端末）メニュー-->
  <div id="menubar-s">
    <h1 class="logo"><a href="https://taumax-github.github.io/"><Image src={ICON_TWITTER_CARD} alt="TOP"></a></h1>
    <nav>
      <ul class="none">
        <li class="menuimg menu1"><a href="https://taumax-github.github.io/"><span>Home</span></a></li>
      </ul>
    </nav>
    <ul class="icon">
      <li><a href="https://twitter.com/taumax_" target="_blank"><Image src={ICON_TWITTER} alt="Twitter"></a></li>
      <li><a href="https://togetter.com/id/taumax_" target="_blank"><Image src={ICON_TOGETTER} alt="togetter"></a></li>
      <li><a href="https://qiita.com/taumax" target="_blank"><Image src={ICON_QIITA} alt="Qiita"></a>  </li>
    </ul>
    <ul class="icon_middle">
      <a href="https://taumax-github.github.io/sagamax/" target="_blank"><Image src={ICON_SAGAMAX} width="200" alt="sagamax"><br>ロマサガサイト</a>
    </ul>
  </div><!--/#menubar-s-->
</header><!--/.sh-->
