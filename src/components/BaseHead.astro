---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import '../styles/style.css';
import '../styles/print.css';
import FallbackImage from '../assets/blog-placeholder-1.jpg';
import type { ImageMetadata } from 'astro';

type Props = {
  title: string;
  description: string;
  twitterCardSize: 'summary' | 'summary_large_image';
  image?: ImageMetadata;
};

export const TWITTER_CARD_SUMMARY = 'summary'
export const TWITTER_CARD_LARGE = 'summary_large_image'
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const { title, description, twitterCardSize, image = FallbackImage } = Astro.props;
---

<head>
  <meta charset="UTF-8">
  <meta http-equiv="Pragma" content="no-cache">
  <meta http-equiv="cache-control" content="no-cache">
  <meta http-equiv="expires" content="0">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta http-equiv="Content-Style-Type" content="text/css" />
  <meta http-equiv="Content-Script-Type" content="text/javascript" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />

  <!-- twitter投稿用の設定 -->
  <meta name="twitter:card" content={twitterCardSize} /> <!--カード種類：summary か summary_large_image-->
  <meta name="twitter:site" content="@taumax_" /> <!--ユーザー名-->
  <meta property="og:url" content={Astro.url.href} /> <!--記事のURL-->
  <meta property="og:title" content={title} /> <!--記事のタイトル-->
  <meta property="og:description" content={description} /> <!--記事の要約（ディスクリプション）-->
  <meta property="og:image" content="https://taumax-develop.github.io/images/icon_twitter_card.png" /> <!--画像のURL-->

  <!-- Google tag (gtag.js) -->
  <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-HPG5Y8S04S"></script>
  <script is:inline>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'G-HPG5Y8S04S');
  </script>

  <title>{title}</title>
</head>
