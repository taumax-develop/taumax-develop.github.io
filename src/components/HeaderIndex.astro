---
import { Image } from 'astro:assets';
import ICON_TWITTER from '../assets/images/icon_twitter.png';
import ICON_TOGETTER from '../assets/images/icon_togetter.png';
import ICON_QIITA from '../assets/images/icon_qiita.png';

export type index = {
  id: string;
  name: string;
};
let { indexList } = Astro.props;
---

<ul class="icon">
  <li><a href="https://twitter.com/taumax_" target="_blank"><Image src={ICON_TWITTER} alt="Twitter"></a></li>
  <li><a href="https://togetter.com/id/taumax_" target="_blank"><Image src={ICON_TOGETTER} alt="togetter"></a></li>
  <li><a href="https://qiita.com/taumax" target="_blank"><Image src={ICON_QIITA} alt="Qiita"></a></li>
</ul>
<nav>
  <ul class="indent_no">
    {indexList?.map((item: index) => {
      let ele = item.id? <li><a href={item.id}>{item.name}</a></li>: <br/><p>{item.name}</p>
      return ele
    })}
  </ul>
</nav>
